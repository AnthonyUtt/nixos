layout {
  default_tab_template {
    children
    pane size=1 borderless=true {
      plugin location="compact-bar"
    }
  }

  tab name="notes" focus=true {
    pane {
      cwd "~/source/notes"
      name "notes"
      command "nvim"
      focus true
    }
  }

  tab name="amplify" {
    pane {
      cwd "~/source/work/amplify"
      name "amplify"
    }
  }
}
